{
  "extends": ["@tsconfig/node20/tsconfig.json"],
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",

    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      // "@/*": ["./src/*"],
      "@theme/*": [".vitepress/theme/*"],
      "@data/*": [".vitepress/data/*"],
      "@wiki/*": ["src/wiki/*"],
      "@styles/*": ["src/styles/*"],
      "@translators/*": ["src/translators/*"],
      "@plugins/*": ["src/plugins/*"]
    },
    "resolveJsonModule": true,

    "allowJs": true,
    "strict": true,
    // "composite": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["env.d.ts", ".vitepress/**/*", "src/**/*"]
}
